<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="223dp"
    android:background="@color/WHITE">
    <ImageView
        android:src="@drawable/box_hipass"
        android:layout_width="match_parent"
        android:layout_height="223dp" />
    <ImageView
        android:id="@+id/hipass_popup_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/btn_x"
        android:layout_width="27dp"
        android:layout_height="27dp" />
    <TextView
        android:id="@+id/hipass_popup_whatishipass"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="38dp"
        android:textSize="28sp"
        android:textColor="@color/green"
        android:text="하이패스란?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/hipass_popup_whatishipass"
        style="@style/scollbar_style">
        <TextView
            android:id="@+id/hipass_popup_content"
            android:lineSpacingExtra="7dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/green"
            android:layout_marginBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
</RelativeLayout>
