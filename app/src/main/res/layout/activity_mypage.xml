<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="162dp">

            <RelativeLayout
                android:layout_marginTop="34dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_home_person"
                android:layout_width="111dp"
                android:layout_height="111dp" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_my_page_member_gubun_image"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:background="@drawable/login_naver_logo" />

            <TextView
                android:id="@+id/activity_my_page_member_gubun_text"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="네이버"
                android:layout_marginLeft="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/activity_my_page_member_gubun_text"
                android:textSize="15sp"
                android:text=" 로그인 되었습니다." />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/activity_mypage_name"
            android:background="@drawable/box_edit"
            android:layout_marginTop="12sp"
            android:layout_width="270sp"
            android:layout_height="39sp">

            <TextView
                android:id="@+id/activity_my_page_name"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/box_edit"
            android:layout_marginTop="12sp"
            android:layout_width="270sp"
            android:layout_height="39sp">

            <TextView
                android:id="@+id/activity_my_page_phone"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mypage_change_email"
            android:background="@drawable/box_edit"
            android:layout_marginTop="12sp"
            android:layout_width="270sp"
            android:layout_height="39sp">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:text="이메일 수정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mypage_button"
            android:background="@drawable/box_edit"
            android:layout_marginTop="12sp"
            android:layout_width="270sp"
            android:layout_height="39sp">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:text="비밀번호 변경"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>