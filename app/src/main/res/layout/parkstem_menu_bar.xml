<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >
<ScrollView
android:layout_width="wrap_content"
android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="288dp"
    android:layout_height="match_parent"
    android:background="@color/WHITE">

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="19dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <ImageView
            android:src="@drawable/img_menu_logo"
            android:layout_width="69dp"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/parkstem_menu_bar_parkstem"
            android:layout_alignParentRight="true"
            android:text="@string/toolbar_name"
            android:textColor="@color/btn_1"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/parkstem_menu_bar_user_name"
                android:textColor="@color/btn_1"
                android:textSize="21sp"
                android:text="홍길동"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/btn_1"
                android:textSize="21sp"
                android:text=" 님"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:background="@color/btn_1"
        android:paddingLeft="33dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/nav_park_status"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onNavigationItemSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_item_height">
            <RelativeLayout
                android:background="@drawable/btn_menu_car"
                android:layout_width="47dp"
                android:layout_height="45dp" />
            <TextView
                android:text="주차 현황"
                android:layout_marginLeft="35dp"
                android:textColor="@color/WHITE"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_car_number"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onNavigationItemSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_item_height">
            <RelativeLayout
                android:layout_marginLeft="2dp"
                android:background="@drawable/btn_menu_number"
                android:layout_width="43dp"
                android:layout_height="45dp" />
            <TextView
                android:text="차량번호 관리"
                android:layout_marginLeft="37dp"
                android:textColor="@color/WHITE"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_credit_card"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onNavigationItemSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_item_height">
            <RelativeLayout
                android:background="@drawable/btn_menu_card"
                android:layout_width="39dp"
                android:layout_height="28dp" />
            <TextView
                android:text="신용카드 관리"
                android:layout_marginLeft="39dp"
                android:textColor="@color/WHITE"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_long_ticket"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onNavigationItemSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_item_height">
            <RelativeLayout
                android:background="@drawable/btn_menu_1month"
                android:layout_width="39dp"
                android:layout_height="38dp" />
            <TextView
                android:text="정기권 구매"
                android:layout_marginLeft="39dp"
                android:textColor="@color/WHITE"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_park_ticket"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onNavigationItemSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_item_height">
            <RelativeLayout
                    android:background="@drawable/btn_menu_ticket"
                    android:layout_width="41dp"
                    android:layout_height="39dp" />
                <TextView
                    android:text="주차권 구매"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/WHITE"
                    android:textSize="21sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_park_list"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="onNavigationItemSelected"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_item_height">
                <RelativeLayout
                    android:background="@drawable/btn_parkhistory"
                    android:layout_width="41dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="주차 내역"
                    android:layout_marginLeft="38dp"
                    android:textColor="@color/WHITE"
                    android:textSize="21sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_pay_list"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="onNavigationItemSelected"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_item_height">
                <RelativeLayout
                    android:background="@drawable/btn_payhistory"
                    android:layout_width="31dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="결제 내역"
                    android:layout_marginLeft="43dp"
                    android:textColor="@color/WHITE"
                    android:textSize="21sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_setting"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="onNavigationItemSelected"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_item_height">
                <RelativeLayout
                    android:background="@drawable/btn_setup"
                    android:layout_width="33dp"
                    android:layout_height="33dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>