<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/history_park_item_date"
        android:textColor="@color/gray_for_text"
        android:textSize="20sp"
        android:text="4.12"
        android:layout_gravity="center_vertical"
        android:layout_width="54dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/history_park_item_name"
        android:gravity="center"
        android:textColor="@color/gray_for_text"
        android:textSize="14sp"
        android:text="센트럴푸르지오\n주차장"
        android:layout_gravity="center_vertical"
        android:layout_width="93dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/history_park_item_time"
        android:layout_marginLeft="14dp"
        android:textColor="@color/gray_for_text"
        android:textSize="20sp"
        android:text="2h30m"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/history_park_item_price"
        android:gravity="right"
        android:textColor="@color/gray_for_text"
        android:textSize="20sp"
        android:text="&#xffe6;36,000"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>