<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/input_new_card_menu"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@drawable/img_main"
        >
        <RelativeLayout
            android:layout_marginLeft="7sp"
            android:layout_width="14sp"
            android:layout_height="19sp"
            android:layout_marginTop="19sp"
            android:background="@drawable/btn_back"
            >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드 등록"
                android:textSize="22sp"
                android:textColor="#000000"
                />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/input_new_card_menu"
        android:paddingLeft="34dp"
        android:layout_marginTop="46dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="카드별칭"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/input_new_card_name"
                android:layout_marginLeft="36dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="카드별칭"
                android:textColorHint="#bcc1c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="카드종류"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginLeft="43dp"
                android:background="@drawable/img_ground"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>

            <TextView
                android:textSize="20sp"
                android:text="개인"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginLeft="31dp"
                android:background="@drawable/img_round"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>

            <TextView
                android:textSize="20sp"
                android:text="법인"
                android:textColor="#bcc1c5"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="카드번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/input_new_card_number"
                android:layout_marginLeft="36dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="카드번호"
                android:textColorHint="#bcc1c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="유효기간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/input_new_card_duration_month"
                android:layout_marginLeft="36dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="1월"
                android:textColorHint="#bcc1c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/input_new_card_duration_year"
                android:layout_marginLeft="11dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="2016년"
                android:textColorHint="#bcc1c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="생년월일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/input_new_card_birth"
                android:layout_marginLeft="36dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="생년월일(6자리)"
                android:textColorHint="#bcc1c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="38dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="비밀번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginLeft="43dp"
                android:background="@drawable/img_round"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:background="@drawable/img_round"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:background="@drawable/img_round"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:background="@drawable/img_round"
                android:layout_width="30dp"
                android:layout_height="30dp"></RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>