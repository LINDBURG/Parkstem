<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="31dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="142dp">

        <ImageView
            android:id="@+id/activity_park_state_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_place" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99FFFFFF"/>

        <LinearLayout
            android:gravity="center_vertical|right"
            android:background="@drawable/img_photo_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/activity_park_state_park_name"
                    android:textColor="@color/BLACK"
                    android:textSize="26sp"
                    android:text="주차장 이름"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_park_state_park_address"
                    android:textColor="@color/BLACK"
                    android:textSize="15sp"
                    android:text="주차장 주소"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="기본 " />
                    <TextView
                        android:id="@+id/activity_park_state_base_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="분 &#x20a9;" />
                    <TextView
                        android:id="@+id/activity_park_state_base_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="0" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="추가 " />
                    <TextView
                        android:id="@+id/activity_park_state_park_price_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="분 &#x20a9;" />
                    <TextView
                        android:id="@+id/activity_park_state_park_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/BLACK"
                        android:textSize="22sp"
                        android:text="0" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginRight="27dp"
                android:background="@drawable/img_30clock"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/activity_park_state_park_price_time2"
                    android:layout_marginTop="20dp"
                    android:text="0"
                    android:textSize="21sp"
                    android:textColor="@color/WHITE"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="36dp"
                    android:textSize="17sp"
                    android:textColor="@color/WHITE"
                    android:layout_alignParentRight="true"
                    android:text="min"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="17dp"
                    android:textSize="21sp"
                    android:textColor="@color/BLACK"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="기준"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="82dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/img_clock"
            android:layout_width="25dp"
            android:layout_height="23dp" />

        <TextView
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="입차시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_park_state_car_in_time"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/img_clock"
            android:layout_width="25dp"
            android:layout_height="23dp" />

        <TextView
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="출차시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_park_state_car_out_time"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/img_bar"
        android:layout_width="308dp"
        android:layout_height="1.5dp"></RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/img_money"
            android:layout_width="21dp"
            android:layout_height="23dp" />

        <TextView
            android:layout_centerVertical="true"
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="결제금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_park_state_total_amount"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:text="&#x20a9;0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
</ScrollView>