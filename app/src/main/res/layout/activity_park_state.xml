<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="31dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/img_place_g"
        android:layout_width="match_parent"
        android:layout_height="142dp">

        <LinearLayout
            android:gravity="center_vertical|right"
            android:background="@drawable/img_photo_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:text="A 주차장"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="서울 강남구 역삼동 701-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:text="기본 30분 W3,000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:text="추가 10분 W1,000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginRight="27dp"
                android:background="@drawable/img_30clock"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="21sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:text="30"
                    android:layout_marginRight="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="36dp"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:text="min"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="17dp"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="기준"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="82dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/img_clock"
            android:layout_width="25dp"
            android:layout_height="23dp" />

        <TextView
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="입차시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:text="2:00PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/img_clock"
            android:layout_width="25dp"
            android:layout_height="23dp" />

        <TextView
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="출차시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:text="4:05PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/img_bar"
        android:layout_width="308dp"
        android:layout_height="1.5dp"></RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="42dp"
        android:paddingRight="55dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/img_money"
            android:layout_width="21dp"
            android:layout_height="23dp" />

        <TextView
            android:layout_centerVertical="true"
            android:textSize="23sp"
            android:layout_marginLeft="50dp"
            android:text="결제금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:textSize="23sp"
            android:text="&#x20a9;12,000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
</ScrollView>