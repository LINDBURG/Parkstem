<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        layout="@layout/no_nav_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingTop="55sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/box_edit"
                    android:layout_width="270sp"
                    android:layout_height="39sp">
                    <EditText
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="이름"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:textColorHint="#bcc1c5"
                        android:textColor="#000000"
                        android:layout_marginRight="31sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10sp"
                    android:background="@drawable/box_edit"
                    android:layout_width="270sp"
                    android:layout_height="39sp">
                    <EditText
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="이메일 주소"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:textColorHint="#bcc1c5"
                        android:textColor="#000000"
                        android:layout_marginRight="31sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10sp"
                    android:background="@drawable/box_edit"
                    android:layout_width="270sp"
                    android:layout_height="39sp">
                    <EditText
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="비밀번호(4자리 이상)"
                        android:textSize="17sp"
                        android:textColorHint="#bcc1c5"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:layout_marginRight="31sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10sp"
                    android:background="@drawable/box_edit"
                    android:layout_width="270sp"
                    android:layout_height="39sp">
                    <EditText
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="핸드폰 번호"
                        android:textSize="17sp"
                        android:singleLine="true"
                        android:textColorHint="#bcc1c5"
                        android:textColor="#000000"
                        android:layout_marginRight="31sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="28sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/assign_agree"
                        android:layout_marginLeft="64sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#e5f0d4"
                        android:textSize="17sp"
                        android:text="약관 동의"
                        android:layout_marginLeft="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:background="@drawable/btn_1"
                    android:layout_marginTop="153sp"
                    android:layout_width="270sp"
                    android:layout_height="39sp">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="17sp"
                        android:textColor="#ffffff"
                        android:text="약관 동의 하고 회원가입"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>